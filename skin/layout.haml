      document.write(unescape("%3Cscript src='http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js' type='text/javascript'%3E%3C/script%3E"));
      document.write(unescape("%3Cscript src='/jquery.tagcloud.js' type='text/javascript'%3E%3C/script%3E"));

    :script
