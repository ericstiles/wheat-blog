%html(lang="en")
  %head
    %meta(charset="utf-8")
    %title #{(title ? title + " - " : "")}NodeJS By Eric Stiles
    %meta(name="description" content="Learn the zen of coding in NodeJS.")
    %meta(name="viewport" content="width=device-width") 
    %meta(name="og:type" content="#{(title ? 'article' : 'blog')}")
    %meta(name="og:title" content="#{(title ? title + ' - ' : '')}NodeJS By Eric Stiles")
    %meta(name="og:image" content="#{(title ? title + ' - ' : '')}IMAGE GOES HERE")
